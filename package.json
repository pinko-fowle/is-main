{
  "name": "is-main",
  "version": "0.2.0",
  "description": "Check if current module is main module.",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "esm": "^3.0.28",
    "execa": "^0.10.0",
    "lint-staged": "^7.0.5",
    "simple-git-hooks": "^2.7.0",
    "xo": "^0.48.0"
  },
  "repository": "ratson/is-main",
  "license": "MIT",
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "*.md",
    "index.js"
  ],
  "keywords": [
    "main-module",
    "import",
    "require",
    "process",
    "main",
    "esm",
    "es-main"
  ],
  "ava": {
    "babel": false,
    "require": [
      "esm"
    ]
  },
  "lint-staged": {
    "*.js": [
      "xo --fix"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "useTabs": false,
    "bracketSpacing": true
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npx ava"
  },
  "xo": {
    "prettier": true
  }
}
