{
  "name": "is-main",
  "version": "0.2.0",
  "description": "Check if current module is main module.",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "test": "ava",
    "build": "tsc -b",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "ava": "^4.1.0",
    "esm": "^3.2.25",
    "execa": "^6.1.0",
    "lint-staged": "^12.3.7",
    "simple-git-hooks": "^2.7.0",
    "typescript": "next",
    "xo": "^0.48.0"
  },
  "repository": "ratson/is-main",
  "license": "MIT",
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "*.md",
    "index.js",
    "*.ts"
  ],
  "keywords": [
    "require.main",
    "main-module",
    "import",
    "process",
    "main",
    "esm",
    "es-main",
    "es-module"
  ],
  "lint-staged": {
    "*.js": [
      "xo --fix"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "useTabs": false,
    "bracketSpacing": true
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npx ava"
  },
  "xo": {
    "prettier": true
  }
}
